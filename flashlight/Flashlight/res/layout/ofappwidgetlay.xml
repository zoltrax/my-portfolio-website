<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center"
  android:layout_margin="4dp"
  android:background="@drawable/appwidget_bg_focused">
 <!--  android:background="@drawable/appwidget_bg_clickable">--> 
 <!--   <TextView android:id="@+id/widget1label" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content"/>-->
<!-- 
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/appwidget_bg_clickable" />
 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
             >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flashlight" 
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/power_on"
                android:scaleType="fitCenter"
                 />

           <!--   <Button
                android:id="@+id/buttonik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Me!" /> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutOnOff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="7dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery status:" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99%"
                android:paddingTop="5dp" />

        </LinearLayout>

    </LinearLayout>
 
</LinearLayout>